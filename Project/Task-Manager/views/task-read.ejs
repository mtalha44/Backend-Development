<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Task Manager - My Tasks</title>
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <!-- Use the official Tailwind CSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900">
  <!-- Navigation / Back Link -->
  <div class="p-5">
    <a href="/task/app/create/<%= userId %>" class="text-blue-500 hover:text-blue-300 font-semibold">
      &larr; Go Back
    </a>
  </div>

  <!-- Container for Tasks -->
  <div class="p-8 max-w-5xl mx-auto">
    <% if(task.length > 0) { %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% task.forEach((task) => { %>
          <div class="bg-zinc-800 rounded-2xl shadow-lg p-6 flex flex-col justify-between">
            <div class="mb-4">
              <h4 class="text-2xl font-bold text-white mb-2"><%= task.topic %></h4>
              <p class="text-md break-words text-gray-300"><%= task.description %></p>
            </div>
            <div class="flex justify-between">
              <a href="/task/app/edit/<%= task._id %>/<%= userId %>" 
                 class="text-cyan-400 hover:text-cyan-200 font-medium">
                Edit Task
              </a>
              <a href="/task/app/delete/<%= task._id %>/<%= userId %>" 
                 class="text-red-500 hover:text-red-300 font-medium">
                Delete Task
              </a>
            </div>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <div class="text-center text-white mt-10">
        <h3 class="text-xl font-semibold">No tasks created yet...</h3>
      </div>
    <% } %>
  </div>
</body>
</html>
